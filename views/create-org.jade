extends layout
block content
  .content
    .page-header
      if update
        - var title = 'Update ' + org.name;
      else
        - var title = 'Create Org';
      h2= title

  if update
    - var form_action = '/orgs/' + org.slug;
  else
    - var form_action = '/orgs';
  form#create-org(action=form_action, method='POST').form-horizontal
    input(type='hidden', name='_csrf', value=req.session._csrf)
    if update
      - var form_action = '/orgs/' + org.slug;
    else
      - var form_action = '/orgs';
    form#create-org(action=form_action, method='POST').form-horizontal
      input(type='hidden', name='_csrf', value=req.session._csrf)
      if update
        input(type='hidden', name='_method', value='PUT')

      .control-group
        label.control-label(for='name') Name:
        .controls
          input(type='text', name='name', value=org.name)#name
    
      .control-group
      label.control-label(for='slug') Slug:
      .controls
        input(type='text', name='slug', value=org.slug)#slug
        .help-block This is the path that shows up in the URL (i.e., /orgs/slug)
    
      .control-group
      label.control-label(for='description') Description:
      .controls
        textarea(name='description', rows=20, cols=80)#description= org.description
    
      .form-actions
        if update
        input(type='submit', value=title).btn.btn-primary


  script(type='text/javascript')
      $(function() {
          $('#name').focus();
      });
