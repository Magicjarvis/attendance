a(href='/create-org/') Create an org

h1= title

if (typeof orgs != 'undefined')
  each org in orgs
    .org
      h2
        a(href='/orgs/' + org.slug)= org.name
      p= org.description
      form(action='/orgs/' + org.slug, method='POST')
        input(type='hidden', name='_method', value='DELETE')
        input(type='submit', value='Delete')